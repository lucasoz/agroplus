<div class='page-header form-signin '>
    <h1>Editar Actividad</h1>
</div>

<div class="form-signin">
  {{#each flashMessages.queue as |flash|}}
    {{#flash-message flash=flash as |component flash|}}
      {{flash.message}}
    {{/flash-message}}
  {{/each}}
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1">Nombre de la actividad</span>
    {{input type="text" value=nombreActividad class="form-control" placeholder="Ej: Pago de empleado, compra de maquinaria, venta de producto" aria-describedby="basic-addon1"}}
  </div>
  <br>

  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1">Descripción</span>
    {{textarea value=descripcion class='form-control' placeholder='Realiza una corta descripción del proyecto.' aria-describedby="basic-addon1"}}
  </div>
  <br>

  <button type="button"  class='btn btn-lg btn-success btn-block' {{action 'editarActividad'}}>Agregar Actividad</button>
  {{#link-to 'proyectos.proyecto.index' class='btn btn-lg btn-danger btn-block'}}
    Cancelar
  {{/link-to}}
</div>
{{outlet}}
