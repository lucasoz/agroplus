{{#link-to 'proyectos.agregar-proyecto' class='btn btn-success'}} Agregar proyecto {{/link-to}}
{{#link-to 'index' class='btn btn-default'}}
  Regresar
{{/link-to}}
<h1>Proyectos</h1>
{{#each flashMessages.queue as |flash|}}
  {{#flash-message flash=flash as |component flash|}}
    <b>{{component.flashType}}!</b>
    {{flash.message}}
  {{/flash-message}}
{{/each}}
<table class="table">
  <thead>
    <tr>
    <th>Nombre</th>
    <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |proyecto|}}
      <tr>
      <td>{{#link-to 'proyectos.proyecto' proyecto.id}} {{proyecto.nombre}} {{/link-to}}</td>
      <!-- Falta organizar proyecto.id de editar proyectos-->
      <td>{{#link-to 'proyectos.proyecto.editar-proyecto' proyecto.id class='btn btn-primary'}}Editar{{/link-to}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}
